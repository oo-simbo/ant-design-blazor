<DatePicker ShowTime="@true" OnChange="OnChange"/>
<br />
<RangePicker ShowTime='@("HH:mm")' OnChange="OnChange"/>

@code
{
    private void OnChange(DateTime value, string dateString)
    {
        Console.WriteLine($"Selected Time: {value}");
        Console.WriteLine($"Formatted Selected Time: {dateString}");
    }
}