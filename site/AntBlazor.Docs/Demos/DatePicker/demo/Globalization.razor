@using System.Globalization
<Row>
    <Col Span="12">
        <Text>en-US</Text>
        <br />
        <DatePicker Picker="@DatePickerType.Date" CultureInfo="@EN" />
        <br />
        <DatePicker Picker="@DatePickerType.Week" CultureInfo="@EN" />
        <br />
        <DatePicker Picker="@DatePickerType.Month" CultureInfo="@EN" />
        <br />
        <DatePicker Picker="@DatePickerType.Quarter" CultureInfo="@EN" />
        <br />
        <DatePicker Picker="@DatePickerType.Year" CultureInfo="@EN" />
        <br />
    </Col>
    <Col Span="12">
        <Text>zh-CN</Text>
        <br />
        <DatePicker Picker="@DatePickerType.Date" CultureInfo="@CN" />
        <br />
        <DatePicker Picker="@DatePickerType.Week" CultureInfo="@CN" />
        <br />
        <DatePicker Picker="@DatePickerType.Month" CultureInfo="@CN" />
        <br />
        <DatePicker Picker="@DatePickerType.Quarter" CultureInfo="@CN" />
        <br />
        <DatePicker Picker="@DatePickerType.Year" CultureInfo="@CN" />
        <br />
    </Col>
</Row>

@code{
    CultureInfo EN = CultureInfo.GetCultureInfo("en-US");
    CultureInfo CN = CultureInfo.GetCultureInfo("zh-CN");
}