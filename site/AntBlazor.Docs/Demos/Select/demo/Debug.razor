<style>
    #components-select-demo-debug .debug-align {
        position: relative;
        display: inline-block;
        line-height: 32px;
        height: 32px;
        background: rgba(255, 0, 0, 0.1);
        box-sizing: border-box;
    }

        #components-select-demo-debug .debug-align:after {
            position: absolute;
            content: '';
            border: 1px solid green;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            pointer-events: none;
        }

    #SelectDemoDebugContainer {
        z-index: 1;
        width: 500px;
        background: #FFF;
        position: relative;
        border: 1px solid red;
    }
</style>

<div id="SelectDemoDebugContainer">
    <Input Style="width: 100px" Value="222" />
    <Select ShowSearch
            Placeholder="233"
            OnChange="@OnChange"
            Style="width: 120px">
        <SelectOption Value="jack">Jack</SelectOption>
        <SelectOption Value="lucy">Lucy</SelectOption>
        <SelectOption Value="disabled" disabled>Disabled</SelectOption>
        <SelectOption Value="yaoming">YaoMing</SelectOption>
        <SelectOption Value="long">I am super super long!</SelectOption>
    </Select>
    <Select ShowSearch
            Mode="multiple"
            Style="width: 120px"
            DefaultValue="@(new[]{"lucy"})"
            OnChange="@OnChange"
            Placeholder="233">
        <SelectOption Value="jack">Jack</SelectOption>
        <SelectOption Value="lucy">Lucy</SelectOption>
        <SelectOption Value="disabled" disabled>Disabled</SelectOption>
        <SelectOption Value="yaoming">YaoMing</SelectOption>
        <SelectOption Value="long">I am super super long!</SelectOption>
    </Select>
    <span className="debug-align">AntDesign</span>
    <Button>222</Button>
</div>

@using OneOf;
@code
{
    private void OnChange(OneOf<string, IEnumerable<string>, LabeledValue, IEnumerable<LabeledValue>> value, OneOf<SelectOption, IEnumerable<SelectOption>> option)
    {
        Console.WriteLine($"selected: ${value}");
    }
}
